<div class='image__container' width='240'>
  <button type='button' class='modal__btn-close' data-modal-close>
    <svg class='modal__icon-close' data-btn='close' width='30' height='30'>
      <use href='./images/modal-sprite1.svg#icon-close-btn'></use>
    </svg>
  </button>
  <img
    class='image js_image_modal'
    src='https://image.tmdb.org/t/p/w500{{poster_path}}'
    alt='{{original_title}}'
  />
</div>
<div class='movie__description'>
  <h2 class='movie__name' data-id={{id}}>{{title}}</h2>
  <div class='grid-container'>
    <i class='movie__item-title'>Vote / Votes</i>
    <div class='value'>
      <span class='vote movie__vote-focus'>{{vote_average}}</span>
      /
      <span class='votes movie__votes-unactive'>{{vote_count}}</span>
    </div>
    <i class='movie__item-title'>Popularity</i>
    <span class='value js-value-popular'>{{popularity}}</span>
    <i class='movie__item-title'>Original Title</i>
    <span class='value js-value-Ð¾riginal'>{{original_title}}</span>
    <i class='movie__item-title'>Genre</i>
    <span class='value js-genre'>{{genres}}</span>
  </div>
  <h3 class='about__title'>About</h3>
  <article class='about__text'>
    {{overview}}
  </article>

  <div class='btn__container'>
    <button class='modal__btn js-Wathed'>add to Watched</button>
    <button class='modal__btn js-Queuee'>add to queue</button>
  </div>
</div>